

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer Dashboard</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            /*background-color: #f8f9fa; /* Bootstrap default background color *
            background-color: ;*/
            color: #333; /* Text color */
        }
        .jumbotron {
            background-image: url('background.jpg'); /* Replace 'background.jpg' with your actual image path */
            background-size: cover;
            background-position: center;
            color: black;
            text-align: center;
            padding: 100px 25px;
            margin-bottom: 0;
    
        }
        .navbar {
            background-color: #007bff !important; /* Updated navbar background color */
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1); /* Bootstrap navbar shadow */
        }
        .navbar-brand {
            font-size: 1.5rem; /* Adjust navbar brand font size */
            color: white !important; /* Navbar brand color */
        }
        .nav-link {
            color: white !important; /* Navbar links color */
        }
        .nav-link:hover {
            color: #f8f9fa !important; /* Navbar links color on hover */
        }
        .btn-primary {
            background-color: #007bff; /* Primary button background color */
            border-color: #007bff; /* Primary button border color */
        }
        .btn-primary:hover {
            background-color: #0056b3; /* Primary button background color on hover */
            border-color: #0056b3; /* Primary button border color on hover */
        }
        .card {
            background-color: #fff; /* Card background color */
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1); /* Card shadow */
        }
        .card-title {
            color: #007bff; /* Card title color */
        }
        .card-subtitle {
            color: #6c757d; /* Card subtitle color */
        }
        .form-control {
            background-color: #f8f9fa; /* Form control background color */
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="/">Dashboard</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/about">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/contact">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/services">Services</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Jumbotron with Background Image -->
    <div class="jumbotron">
        <div class="container">
            <h1 class="display-4">Customer Dashboard</h1>
            <p class="lead">Welcome to your personalized customer dashboard.</p>
        </div>
    </div>

    <!-- Main Container -->
    <div class="container">
        <% if (message) { %>
            <div class="alert alert-info" role="alert">
                <%= message %>
            </div>
        <% } %>

        <!-- User Profile Section -->
        <div class="card mt-4">
            <div class="card-body">
                <h4 class="card-title">User Profile</h4>
                <% if (user) { %>
                    <p class="card-text"><strong>Username:</strong> <%= user.name %></p>
                    <p class="card-text"><strong>Email:</strong> <%= user.email %></p>
                    <p class="card-text"><strong>Contact Number:</strong> <%= user.phone %></p>
                <% } else { %>
                    <p class="card-text">User not found or logged in.</p>
                <% } %>
            </div>
        </div>

        <!-- Issue Submission Form -->
        <form action="/submitRequest" method="POST" class="mt-4">
            <!-- Customer Information -->
            <fieldset class="border p-4 mb-4">
                <legend class="w-auto">Customer Information</legend>
                <div class="form-group">
                    <label for="name">Name:</label>
                    <input type="text" class="form-control" id="name" name="name" required>
                </div>
                <div class="form-group">
                    <label for="contactNumber">Contact Number:</label>
                    <input type="tel" class="form-control" id="contactNumber" name="contactNumber" required>
                </div>
                <div class="form-group">
                    <label for="email">Email Address:</label>
                    <input type="email" class="form-control" id="email" name="email" required>
                </div>
            </fieldset>

            <!-- Appliance Information -->
            <fieldset class="border p-4 mb-4">
                <legend class="w-auto">Appliance Information</legend>
                <div class="form-group">
                    <label for="applianceType">Appliance Type:</label>
                    <select class="form-control" id="applianceType" name="applianceType" required>
                        <option value="Refrigerator">Refrigerator</option>
                        <option value="Washing Machine">Washing Machine</option>
                        <option value="Dishwasher">Dishwasher</option>
                        <option value="Microwave">Microwave</option>
                        <option value="Air Conditioner">Air Conditioner</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="brand">Brand:</label>
                    <input type="text" class="form-control" id="brand" name="brand" required>
                </div>
            </fieldset>

            <!-- Issue Details -->
            <fieldset class="border p-4 mb-4">
                <legend class="w-auto">Issue Details</legend>
                <div class="form-group">
                    <label for="issue">Issue:</label>
                    <input type="text" class="form-control" id="issue" name="issue" required>
                </div>
                <div class="form-group">
                    <label for="date">Date:</label>
                    <input type="date" class="form-control" id="date" name="date" required>
                </div>
            </fieldset>

            <!-- Contact Method -->
            <fieldset class="border p-4 mb-4">
                <legend class="w-auto">Contact Method</legend>
                <div class="form-group">
                    <label for="contactMethod">Preferred Contact Method:</label>
                    <select class="form-control" id="contactMethod" name="contactMethod" required>
                        <option value="Phone">Phone</option>
                        <option value="Email">Email</option>
                        <option value="SMS">SMS</option>
                    </select>
                </div>
            </fieldset>

            <!-- Technician Information -->
            <fieldset class="border p-4 mb-4">
                <legend class="w-auto">Technician Information</legend>
                <div class="form-group">
                    <label for="technician">Technician:</label>
                    <select class="form-control" id="technician" name="technician" required>
                        <% technicians.forEach(function(technician) { %>
                            <option value="<%= technician._id %>">
                                <%= technician.name %> (Rating: <%= technician.rating %>)
                            </option>
                        <% }) %>
                    </select>
                </div>
            </fieldset>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary">Submit Request</button>
        </form>

        <!-- Available Technicians Section -->
        <h2 class="mt-5">Available Technicians</h2>
        <div class="row">
            <% technicians.forEach(function(technician) { %>
                <div class="col-md-4">
                    <div class="card technician-card">
                        <div class="card-body">
                            <h5 class="card-title"><%= technician.name %></h5>
                            <h6 class="card-subtitle mb-2 text-muted">Rating: <%= technician.rating %></h6>
                            <p class="card-text">
                                Specializes in: <%= technician.specialization %><br>
                                Contact: <%= technician.phone %>
                            </p>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <!-- Bootstrap and jQuery Scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>


