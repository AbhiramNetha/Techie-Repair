
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Technician Page</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        body {
            background-color: #f8f9fa; 
            color: #333; 
        }
        .jumbotron {
            background-image: url('background.jpg'); 
            background-size: cover;
            background-position: center;
            color: black;
            text-align: center;
            padding: 100px 25px;
            margin-bottom: 0;
        }
        .navbar {
            background-color: #007bff !important; 
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }
        .navbar-brand {
            font-size: 1.5rem; 
            color: white !important; 
        }
        .nav-link {
            color: white !important; 
        }
        .nav-link:hover {
            color: #f8f9fa !important; 
            font-size: large;
        }
        .btn-primary {
            background-color: #007bff; 
            border-color: #007bff; 
        }
        .btn-primary:hover {
            background-color: #0056b3; 
            border-color: #0056b3; 
        }
        .card {
            background-color: #fff; 
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1); 
        }
        .card-title {
            color: #007bff; 
        }
        .card-subtitle {
            color: #6c757d; 
        }
        .form-control {
            background-color: #f8f9fa; 
        }
        .form-section {
            margin-bottom: 40px; 
        }
        .table-section {
            margin-top: 20px; 
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="#">Technician Dashboard</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Services</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-5 shadow-lg p-5">
        <!-- Technician Profile -->
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">Technician Profile</h5>
                <p class="card-text"><strong>Username:</strong> <%= user.name %></p>
                <p class="card-text"><strong>Email:</strong> <%= user.email %></p>
                <p class="card-text"><strong>Contact Number:</strong> <%= user.phone %></p>
            </div>
        </div>

        <!-- Parts Order Section -->
        <div class="form-section">
            <h1>Parts Order</h1>
            <% if (message) { %>
                <p><%= message %></p>
            <% } %>
        
            <form action="/technician/order" method="POST">

                <div class="form-group">
                    <label for="name">Name:</label>
                    <input type="text" class="form-control" id="name" name="name" required>
                </div>
                <div class="form-group">
                    <label for="contactNumber">Contact Number:</label>
                    <input type="tel" class="form-control" id="contactNumber" name="contactNumber" required>
                </div>
                <div class="form-group">
                    <label for="email">Email Address:</label>
                    <input type="email" class="form-control" id="email" name="email" required>
                </div>
            </fieldset>


            <!-- Parts Information -->
<fieldset class="border p-4 mb-4">
    <legend class="w-auto">Parts Information</legend>
    <div class="mb-3">
        <label for="partsnames" class="form-label">Parts</label>
        <select class="form-control" id="partsnames" name="partsname" required>
            <option value="Compressor">Compressor (Refrigerator)</option>
            <option value="Evaporator Fan">Evaporator Fan (Refrigerator)</option>
            <option value="Drive Belt">Drive Belt (Washing Machine)</option>
            <option value="Drain Pump">Drain Pump (Washing Machine)</option>
            <option value="Heating Element">Heating Element (Dishwasher)</option>
            <option value="Spray Arms">Spray Arms (Dishwasher)</option>
            <option value="Magnetron">Magnetron (Microwave)</option>
            <option value="Turntable Motor">Turntable Motor (Microwave)</option>
            <option value="Condenser Coil">Condenser Coil (Air Conditioner)</option>
            <option value="Evaporator Coil">Evaporator Coil (Air Conditioner)</option>
        </select>
        <div class="mb-3">
            <label for="quantity" class="form-label">Quantity</label>
            <input type="number" class="form-control" id="quantity" name="quantity" required min="1">
        </div>
    </div>
</fieldset>

            <!-- Issue Details -->
            <fieldset class="border p-4 mb-4">
                <legend class="w-auto">Description</legend>
                <!--<div class="form-group">
                    <label for="issue">Description:</label>
                    <input type="text" class="form-control" id="description" name="description" required>
                </div>-->
                <div class="form-group">
                    <label for="date">Date:</label>
                    <input type="date" class="form-control" id="date" name="date" required>
                </div>
            </fieldset>
              <!-- Product Seller Information -->
<fieldset class="border p-4 mb-4">
    <legend class="w-auto">Product Seller Information</legend>
    <div class="form-group">
        <select class="form-control" id="seller" name="seller" required>
            <% sellers.forEach(function(seller) { %>
                <option value="<%= seller._id %>">
                    <%= seller.name %> (<%= seller.phone %>) 
                </option>
            <% }) %>
        </select>
    </div>
</fieldset>

            
                
                <button type="submit" class="btn btn-primary">Submit Request</button>
            </form>
        </div>
        
        <!-- Requests Table Section -->
        <div class="table-section mt-4">
            <h1>Requests</h1>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">S.NO</th>
                        <th scope="col">Customer Name</th>
                        <th scope="col">Contact Number</th>
                        <th scope="col">Appliance Type</th>
                        <th scope="col">Issue</th>
                        <th scope="col">Actions</th> 
                    </tr>
                </thead>
                <tbody>
                    <% if (issues.length > 0) { %>
                        <% issues.forEach(function(element, index) { %>
                            <tr>
                                <td><%= index + 1 %></td>
                                <td><%= element.name %></td>
                                <td><%= element.contactNumber %></td>
                                <td><%= element.applianceType %></td>
                                <td><%= element.issue %></td>
                                <td>
                                    <form action="/delete/<%= element.id %>" method="POST">
                                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="6" class="text-center">No issues found</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
        <div class="form-section">
            <!--<h1>Product Sellers</h1>
            <% if (sellers.length > 0) { %>
                <ul class="list-group">
                    <% sellers.forEach(function(seller) { %>
                        <li class="list-group-item">
                            <strong>Name:</strong> <%= seller.name %><br>
                            <strong>Phone:</strong> <%= seller.phone %>
                        </li>
                    <% }) %>
                </ul>
            <% } else { %>
                <p>No product sellers found.</p>
            <% } %>
        </div>-->
          
        
        <!-- Display Success/Error Message -->
        <% if (message) { %>
            <div class="alert alert-info mt-3"><%= message %></div>
        <% } %>
    </div>
    
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

